<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.fragments.addmanhwa.AddManhwaFragment">

    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_fifty"
        android:layout_marginHorizontal="@dimen/size_fifty"
        android:layout_marginTop="@dimen/size_one_hundred_fifty"
        android:background="@drawable/round"
        android:drawableStart="@drawable/create"
        android:drawablePadding="@dimen/size_ten"
        android:hint="@string/et_name"
        android:padding="@dimen/size_ten"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/et_link"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_fifty"
        android:layout_below="@id/et_name"
        android:layout_marginHorizontal="@dimen/size_fifty"
        android:layout_marginTop="@dimen/size_fifty"
        android:background="@drawable/round"
        android:drawableStart="@drawable/search"
        android:drawablePadding="@dimen/size_ten"
        android:hint="@string/et_link_hint"
        android:padding="@dimen/size_ten"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="@dimen/size_one_hundred_fifty"
        android:layout_height="@dimen/size_one_hundred_fifty"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/text_ready"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/size_in_hundred"
        android:text="@string/text_ready"
        android:textColor="@color/gray"
        android:textSize="@dimen/size_in_twenty_five"
        android:textStyle="bold" />

</RelativeLayout>